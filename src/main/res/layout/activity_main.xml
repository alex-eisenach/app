<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="@color/background_material_light">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grid"
        android:id="@+id/gridButtonGRID"
        android:background="@drawable/button_border" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MAP"
        android:id="@+id/map_btnGRID"
        android:clickable="false"
        android:enabled="true"
        android:layout_toRightOf="@+id/gridButtonGRID"
        android:background="@color/background_floating_material_light"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe"
        android:id="@+id/swipeButtonGRID"
        android:layout_toRightOf="@+id/map_btnGRID"
        android:background="@color/background_floating_material_light" />


    <Button
        android:id="@+id/button_camera"
        android:text="@string/button_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/wallet_holo_blue_light"
        android:layout_alignParentRight="true"/>

    <GridView
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_camera"
        android:columnWidth="120dp"
        android:numColumns="3"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />
        <!--map:cameraTargetLat="40.0264"
        map:cameraTargetLng="-105.2519"
        map:cameraZoom="15"
        map:uiRotateGestures="false"-->

    <!--    <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>-->



</RelativeLayout>
